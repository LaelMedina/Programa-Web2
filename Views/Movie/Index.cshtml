@model List<programs.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    @foreach (var item in Model){
        <div class="col-md-3">
            <div class="card mb-3">
                <img src="@item.Poster" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Plot.Substring(0, 60)</p>
                    <p class="card-text"><small class="text-muted">@item.Released</small></p>
                    <a href="/Movie/Details/@item.Id" class="btn btn-primary"></a>
                </div>
            </div>
        </div>
    }
</div>
