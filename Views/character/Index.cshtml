@model List<programs.Models.Character>;
@{
    Layout = "_LayoutPortrait";
}


<div class="row">
    @foreach (var item in Model)
    {
                            <div class="col-md-4">
                                <div class="card mb-3" style="width: 18rem;">
                                    <img src="@item.Poster" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">@item.Name</h5>

                                        <p><em>@item.Phrase</em>.</p>

                                        <div class="card-body">
                                            <a href="/Character/Details/@item.Id" class="card-link">See info</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
    }
</div>

