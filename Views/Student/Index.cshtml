@model IEnumerable<programs.Models.Student> 

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutDataBases";
}



<h1>List of Students</h1>

<div class="mb-4">
    <form asp-action="Search" method="get" class="form-inline justify-content-end">
        <div class="input-group">
            <input type="text" class="form-control mr-2" name="Search" placeholder="Search student">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

<p>
    <a asp-action="Create">Add Student</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Name) *@
                Name
            </th>
            
            <th>
                @* @Html.DisplayNameFor(model => model.Age) *@
                Age
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Gender) *@
                Gender
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Grade) *@
                Grade
            </th>
            
            <th>
                @* @Html.DisplayNameFor(model => model.Calification) *@
                Calification
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @* @Html.DisplayFor(modelItem => item.Name) *@
                @item.Name
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Age) *@
                @item.Age
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.Gender) *@
                @item.Gender
            </td>
          
            <td>
                @* @Html.DisplayFor(modelItem => item.Grade) *@
                @item.Grade
            </td>
            
            <td>
                @* @Html.DisplayFor(modelItem => item.Calification) *@
                @item.Calification
            </td>
           
         
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
