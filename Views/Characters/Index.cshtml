@model IEnumerable<programs.Models.Character>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_LayoutDataBases";
}

<h1>List of Characters</h1>

<div class="mb-4">
    <form asp-action="Search" method="get" class="form-inline justify-content-end">
        <div class="input-group">
            <input type="text" class="form-control mr-2" name="Search" placeholder="Search Character">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3" style="width: 18rem;">
                <img src="@item.Poster" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>

                    <p><em>@item.Phrase</em>.</p>
                    

                    <div class="card-body">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                    </div>
            </div>
        </div>
    </div>
    }
</div>
