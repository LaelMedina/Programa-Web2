<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - programs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/programs.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between py-3">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <form class="d-flex" method="POST" action="/Home/Index">
                                <button class="btn btn-outline-primary me-2" type="submit">Home</button>
                             </form>
                        </li>
                        <li class="nav-item">
                            <form class="d-flex" method="POST" action="/Character/Find">
                                <button class="btn btn-outline-primary me-2" type="submit">List Characters</button>
                             </form>
                        </li>
                        
                    </ul>
                    <form class="d-flex" method="POST" action="/Character/Find">
                        <input class="form-control me-2" type="search" placeholder="Search Character" aria-label="Search" required name="character">
                        <button class="btn btn-outline-primary" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Lael Medina - 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
